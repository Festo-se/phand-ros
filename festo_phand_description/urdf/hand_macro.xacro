<?xml version="1.0"?>

<robot name="hand" xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:macro name="hand" params="prefix version">

        <link
                name="${prefix}hand">

            <visual>
                <origin
                        xyz="0 0 0"
                        rpy="0 0 0"/>
                <geometry>
                        <mesh filename="package://festo_phand_description/meshes/hand.STL"/>
                </geometry>
                <material
                        name="${prefix}">
                    <color
                            rgba="0.792156862745098 0.819607843137255 0.933333333333333 1"/>
                </material>
            </visual>
            <collision>
                <origin
                        xyz="0 0 0"
                        rpy="0 0 0"/>
                <geometry>
                     <mesh filename="package://festo_phand_description/meshes/hand.STL"/>
                </geometry>
            </collision>
        </link>

        <link
                name="${prefix}index_base_joint">

            <visual>
                <origin
                        xyz="0 0 0 "
                        rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://festo_phand_description/meshes/index_base_joint.STL"/>
                </geometry>
                <material
                        name="${prefix}">
                    <color
                            rgba="0.792156862745098 0.819607843137255 0.933333333333333 1"/>
                </material>
            </visual>
            <collision>
                <origin
                        xyz="0 0 0"
                        rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://festo_phand_description/meshes/index_base_joint.STL"/>
                </geometry>
            </collision>
        </link>

        <joint
                name="${prefix}index_deviation"
                type="revolute">
            <origin
                    xyz="0.02385 -0.00408 0.08704"
                    rpy="0.09 -0.131 1.15"/> //0 -0.131 1.57

            <parent link="${prefix}hand"/>

            <child link="${prefix}index_base_joint"/>

            <axis
                    xyz="1 0 0"/>

                <limit
                    lower="-1"
                    upper="1"
                    effort="0"
                    velocity="4"/>
        </joint>

    </xacro:macro>
</robot>